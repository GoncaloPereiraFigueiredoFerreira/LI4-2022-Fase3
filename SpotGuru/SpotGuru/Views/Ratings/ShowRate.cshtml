@model SpotGuru.ViewModels.RatingUserPlusGlobalView

@{
    ViewData["Title"] = "ShowRate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Rate Us</h1>
<hr />
<div>
    <h4>App Rating: @String.Format("{0:0.00}",@Model.RatingGlobal) <img src="/images/misc/EstrelaReview.png" height="20" width="20" alt="Not Found" /> </h4> 
    <hr />
</div>
<div>
    <link rel="stylesheet" href="/css/ratings.css" />
    <h4>Your Rating</h4>
    <div class="stars_section">
        @if (Model.RatingUser == 1)
        {
            <div class="stars_1"></div>
        }
        else if (Model.RatingUser == 2)
        {
            <div class="stars_2"></div>
        }
        else if (Model.RatingUser == 3)
        {
            <div class="stars_3"></div>
        }
        else if (Model.RatingUser == 4)
        {
            <div class="stars_4"></div>
        }
        else
        {
            <div class="stars_5"></div>
        }    
    </div>
</div>
<div>
    <br />
    Changed your mind? <a asp-action="Rate">Click here</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
