@using SpotGuru.Helpers
@model IEnumerable<SpotGuru.Models.Historico>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>History</h1>

<div>
    <a asp-action="DeleteEntradasHistorico" asp-route-id=>Delete History</a>
</div>

<div>
    <link rel="stylesheet" href="/css/monumentDetails.css" />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Name")
                </th>
                <th>
                    @Html.DisplayName("Category")
                </th>
                <th>
                    @Html.DisplayName("Photo")
                </th>
                <th></th>
            </tr>
        </thead>
    <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Monumentos.Nome)</a>
                    </td>
                    <td>
                        @Html.DisplayName(EnumExtensionMethods.GetDescription(item.Monumentos.Categoria))
                    </td>
                    <td>
                        @{
                            string imagePath = "/images/monuments/" + item.Monumentos.pathFoto;
                        }
                        <img class="img_min" src=@imagePath alt="Not Found" /> 
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        }
        </tbody>
    </table>
</div>