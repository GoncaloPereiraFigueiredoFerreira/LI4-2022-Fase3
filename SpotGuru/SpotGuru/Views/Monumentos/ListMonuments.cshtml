@using SpotGuru.Helpers
@model IEnumerable<SpotGuru.ViewModels.MonumentosView>


<div>
    <link rel="stylesheet" href="/css/monumentDetails.css" />

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Name")
                </th>
                <th>
                    @Html.DisplayName("Category")
                </th>
                <th>
                    @Html.DisplayName("Rating")
                </th>
                <th>
                    @Html.DisplayName("Distance")
                </th>
                <th></th>
            </tr>
        </thead>
    
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Nome)</a>
                    </td>
                    <td>
                        @Html.DisplayName(EnumExtensionMethods.GetDescription(item.Categoria))
                    </td>
                    <td>
                        @Html.DisplayName(String.Format("{0:0.00}",item.Rating))
                        <img src="/images/misc/EstrelaReview.png" height="20" width="20" />
                    </td>
                    <td>
                        @Html.DisplayName(String.Format("{0:0.00} {1}",item.distanceToUser,"Km"))
                    </td>
                    <td class="mon_miniature_section">
                        @{
                            string imagePath = "/images/monuments/" + item.pathFoto;
                        }
                        <img class="img_mon_miniature" src=@imagePath alt="Not Found" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
