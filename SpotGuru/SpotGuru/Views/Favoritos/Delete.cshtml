@using Helpers
@model SpotGuru.Models.Favoritos

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Favorite</h1>

<h3>Are you sure you want to delete this from your favorites?</h3>
<div>
    <h4>Monumentos</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Name")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Monumentos.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Description")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Monumentos.Descrição)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Latitude")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Monumentos.Latitude)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Longitude")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Monumentos.Longitude)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Category")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayName(EnumExtensionMethods.GetDescription(Model.Monumentos.Categoria))
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to Favorites</a>
    </form>
</div>